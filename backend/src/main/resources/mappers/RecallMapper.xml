<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mymedicine.myson_backend.mapper.RecallMapper">

    <select id="findRecallDetailsByItemSeq" resultType="com.mymedicine.myson_backend.dto.RecallMedicineDto">
        SELECT
        TBLKEY,
        ITEM_SEQ AS itemSeq,
        PRDUCT_NAME AS productName,
        ENTP_NAME AS entpName,
        RECALL_REASON AS recallReason,
        COMMAND_DATE AS commandDate,
        ENFRC_YN AS enfrcYn
        FROM TBL_RECALL_MEDICINE
        <where>
            ITEM_SEQ IN
            <foreach collection="itemSeqList" item="seq" open="(" close=")" separator=",">
                #{seq}
            </foreach>
        </where>
        ORDER BY COMMAND_DATE DESC
    </select>

</mapper>